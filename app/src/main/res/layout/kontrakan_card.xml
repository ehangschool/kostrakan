<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="315dp"
    android:layout_height="300dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    android:layout_marginBottom="@dimen/margin_bottom_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/card_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/example_rumah"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#f9c7b1"
                    android:gravity="center"
                    android:layout_marginStart="16dp"
                    android:paddingStart="3dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="3dp"
                    android:paddingBottom="2dp">

                    <TextView
                        android:id="@+id/card_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CATEGORY"
                        android:textColor="#e7350e"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/card_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="price"
                    android:layout_marginEnd="16dp"
                    android:textSize="18sp"
                    android:textColor="#3892dd"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Name"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:textColor="#263750"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/card_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="#9e9e9e"
                android:text="Description\nDescription\nDescription"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>